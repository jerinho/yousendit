<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false" android:state_enabled="true">
	    <layer-list>
	        <item android:top="1dp" android:left="1dp"><shape><solid android:color="#8888"/></shape></item>
	        <item android:bottom="1dp" android:right="1dp"><nine-patch android:src="@drawable/button"/></item>
	    </layer-list>
	</item>
	<item android:state_pressed="true" android:state_enabled="true">
	    <layer-list>
	        <item android:top="1dp" android:left="1dp"><shape><solid android:color="#8888"/></shape></item>
	        <item android:bottom="1dp" android:right="1dp"><nine-patch android:src="@drawable/button"/></item>
	        <item android:top="-5dp" android:left="-5dp" android:right="-5dp" android:bottom="-5dp"><shape><solid android:color="#8000"/></shape></item>
	    </layer-list>
	</item>
	<item android:state_enabled="false">
	    <layer-list>
	        <item android:top="1dp" android:left="1dp"><shape><solid android:color="#8888"/></shape></item>
	        <item android:bottom="1dp" android:right="1dp"><nine-patch android:src="@drawable/button"/></item>
	        <item android:top="-5dp" android:left="-5dp" android:right="-5dp" android:bottom="-5dp"><shape><solid android:color="#4888"/></shape></item>
	    </layer-list>
	</item>
	
