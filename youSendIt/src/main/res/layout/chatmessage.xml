<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
            
    <ImageView
        android:id="@+id/chatmessageother"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:visibility="gone"
	    android:background="@drawable/photo_profile_round"/>
    
    <ImageView 
        android:id="@+id/chatmessagepointyou"
        android:background="@drawable/chatbubble_triangle_other"
        android:padding="0dp"
        android:layout_gravity="left"
        android:layout_width="15dp"
        android:layout_height="15dp"/>
    
    <LinearLayout
        android:id="@+id/chatmessagebubble"
        android:orientation="vertical"
	    android:background="@color/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
	    <TextView
	        android:id="@+id/chatmessagetext"
	        android:padding="5dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    
    </LinearLayout>
            
    <ImageView 
        android:id="@+id/chatmessagepointme"
        android:background="@drawable/chatbubble_triangle_self"
        android:padding="0dp"
        android:layout_gravity="right"
        android:layout_width="15dp"
        android:layout_height="15dp"/>

    <ImageView
        android:id="@+id/chatmessageuser"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:visibility="gone"
	    android:background="@drawable/photo_profile_round"/>

</LinearLayout>