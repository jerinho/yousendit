<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/jobdiowner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/jobdiimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/photo_profile_round"
            android:onClick="profile"/>
        
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job posted by"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/jobdisender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:inputType="textMultiLine"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:text="sender" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/jobditime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:inputType="textMultiLine"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:text="time" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/jobdichat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selectorchat"
            android:onClick="chat" />
    </LinearLayout>
        
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    
	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content">
	    
	  	    <TextView
	  	        android:layout_width="match_parent"
	  	        android:layout_height="wrap_content"
	  	        android:text="Destination"
	  	        android:textSize="12sp" />
	
	        <TextView
	            android:id="@+id/jobdito"
	            android:text="Destination"
	  	        android:layout_height="wrap_content"
	  	        android:layout_width="match_parent"
	            android:ellipsize="none"
	            android:inputType="textMultiLine"
	            android:scrollHorizontally="true"
	            android:singleLine="false"/>
	        
		    <LinearLayout
		        android:layout_height="10dp"
		        android:layout_width="match_parent"/>
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Pick up location"
	            android:textSize="12sp" />
	
	        <TextView
	            android:id="@+id/jobdifrom"
	            android:text="Pick up location"
	  	        android:layout_height="wrap_content"
	  	        android:layout_width="match_parent"
	            android:ellipsize="none"
	            android:inputType="textMultiLine"
	            android:paddingBottom="5dp"
	            android:scrollHorizontally="false"
	            android:singleLine="false"/>
			    
		</LinearLayout>
		
	    <ImageButton
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:background="@drawable/selectorlocation"
	        android:onClick="locate" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="10dp"
        android:layout_width="match_parent"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Urgency"
	            android:textSize="12sp" />
	
	        <TextView
	            android:id="@+id/jobdiurgency"
	            android:text="urgency"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
            
        </LinearLayout>
                
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Size"
	            android:textSize="12sp" />
	
	        <TextView
	            android:id="@+id/jobdisize"
	            android:text="size"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
            
        </LinearLayout>
	            
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="10dp"
        android:layout_width="match_parent"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Service Charge"
	            android:textSize="12sp" />
	
	        <TextView
	            android:id="@+id/jobdifee"
	            android:text="fee"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Job valid until"
	            android:textSize="12sp" />
	
	        <TextView
	            android:id="@+id/jobdivalid"
	            android:text="valid"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
            
        </LinearLayout>
	            
    </LinearLayout>
    
    <LinearLayout android:layout_height="30dp" android:layout_width="match_parent"/>

    <view
        android:id="@+id/jobdiflow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        class="my.helper.ImageFlow"/>
    
    <LinearLayout
        android:layout_height="10dp"
        android:layout_width="match_parent"/>
    
    <my.yousendit.peripherals.ApiButton
        android:id="@+id/jobdibid"
        android:onClick="bid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:busy="BIDDING..."
        app:free="I BID THIS JOB" />

</LinearLayout>