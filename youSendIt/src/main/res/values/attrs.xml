<resources>
    <declare-styleable name="MyTextBox">
        <attr name="text" format="string"/>
        <attr name="label" format="string"/>
        <attr name="type" format="enum">
            <enum name="plain" value="0"/>
            <enum name="email" value="1"/>
            <enum name="number" value="2"/>
            <enum name="decimal" value="3"/>
            <enum name="password" value="4"/>
            <enum name="code" value="5"/>
            <enum name="multiline" value="6"/>
        </attr>
        <attr name="showlabel" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="ApiButton">
        <attr name="free" format="string"/>
        <attr name="busy" format="string"/>
    </declare-styleable>
</resources>